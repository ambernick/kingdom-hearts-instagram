<%- include('../partials/header') %>

<h3>Profiles</h3>
<% users.forEach(u => { %>
  <a href="/profile/<%= u._id %>">
    <div class="card">
      <div class="card-body">
        <img height="50" id="avatarPhoto" src="<%= u.avatar ? u.avatar : 'http://theoldreader.com/kittens/300/300/' %>" alt=""> 
        <%= u.name %></a> - Became a wielder on <%= u.createdAt.toLocaleString().split(',')[0] %>
      </div>
    </div><br>
<% }) %>


