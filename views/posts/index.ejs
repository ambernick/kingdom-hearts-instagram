<%- include('../partials/header') %>

<h1>Display Feed</h1>

  <% posts.forEach(post => { %>
    <div class="card">
      <div class="card-header">
        <%= post.postedBy %> <img id="avatarPhoto" width="30" src="<%= post.avatar %>" alt="">
      </div>
      <div class="card-body">
        <h5 class="card-title"><%= post.name %></h5>
        <h6><%= post.createdAt.toLocaleString()%></h6>
        <img src= "<%= post.Posts %>" />
       <div id = "friends"> <%= post.Likes %> Likes </div>
   <%= post.Caption %> 
      
      <form action="posts/<%= post._id  %> ?_method=PUT" method="POST">
        <audio id="audio" src="http://www.soundjay.com/button/beep-07.wav" autoplay="false" ></audio>
        <button type="submit" class="btn btn-success" onclick="playSound();">Like</button>
        <script>
          function playSound() {
                var sound = document.getElementById("audio");
                sound.play();
            }
          </script>
      </form>
      <form action="posts/<%= post._id %> ?_method=DELETE" method="POST">
        <button type="submit" class="btn btn-secondary">Delete Post</button>
      </form>

      
      </div>
    </div>
  <% }) %>

  
<%- include('../partials/footer') %>